@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Html.Partial("_Head")
    <script src="~/Scripts/Login/Login.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>

    <link href="/Login/css/reset.css" rel="stylesheet" type="text/css">
    <link href="/Login/css/style.css" rel="stylesheet" type="text/css">
</head>
<body>

    <div class="login">
        <h1 class="logo"></h1>
        <div class="form">
            <!-- 没有错误提示调用这个div -->
            <div class="input-blank" style="display:none;"></div>
            <!-- 有错误提示 -->
            <div class="input-tips" style="display: none"><span class="error"><i class="i-error i-error-tips"></i><b id="tip">

</b></span></div>

            <div class="inputbox"><input name="UserCode" type="text" placeholder="请输入用户名"><div class="line" id="a"></div></div>
            <div class="inputbox"><input name="Password" type="password" placeholder="密码"><div class="line" id="b"></div></div>
            <div class="inputbox" style="margin-top:40px"><button id="btn_Login" class="loginbtn">登录</button></div>
        </div>
        <div class="wavebg"></div>
    </div>
    <script>
$(function() {
    $('input').focus(function() {
        $(this).parent().find('div').addClass('bg-blue');
    }).blur(function() {
        $(this).parent().find('div').removeClass('bg-blue');
    });
})
    </script>
</body>

</html>
