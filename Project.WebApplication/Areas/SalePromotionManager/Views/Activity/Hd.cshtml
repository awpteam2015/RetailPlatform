




@{
    ViewBag.Title = "Hd";
    Layout = "~/Views/Shared/_LayoutHandler.cshtml";
}

@section JavaScript{
    <script src="/Areas/SalePromotionManager/Scripts/Activity/Hd.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>
}
<div style="display: none">
    <input id="BindEntity" type="text" value="@ViewBag.BindEntity" />
    <input id="Command" type="hidden" />
</div>
<div class="mtable_div">
    <form id="form1">
        <table class="mtable">

            <tr>
                <td>
                    促销主题<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="Title" name="Title" type="text" style="width: 300px" />
                </td>
            </tr>

            <tr>
                <td>
                    活动时间 <span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="StartDate" name="StartDate" type="text" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'});"/>-<input id="EndDate" name="EndDate" type="text" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'});"/>
                </td>
            </tr>
            <tr>
                <td>
                    活动状态：  <span style="color: Red">*</span>:
                </td>
                <td>
                    <select id="State" name="State">
                        <option value="1">启用</option>
                        <option value="2">关闭</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td>
                    简介:
                </td>
                <td>
                    <textarea id="BriefDescription" name="BriefDescription" style="width: 300px;height: 200px"></textarea>
                </td>
            </tr>

        </table>
    </form>
</div>
<div style="padding: 10px 10px 0 10px; text-align: center;">
    @if (Request["PkId"] == null || int.Parse(Request["PkId"]) == 0)
    {
        <a id="btnAdd" class="easyui-linkbutton" iconcls="icon-add" href="javascript:void(0)">新增</a>
    }
    else
    {
        <a id="btnEdit" class="easyui-linkbutton" iconcls="icon-ok" href="javascript:void(0)">编辑</a>
    }
    <a id="btnClose" class="easyui-linkbutton" iconcls="icon-cancel" href="javascript:void(0)">关闭</a>
</div>



