

  


@{
    ViewBag.Title = "Hd";
    Layout = "~/Views/Shared/_LayoutHandler.cshtml";
}

@section JavaScript{
    <script src="/Areas/SalePromotionManager/Scripts/RulePromotionGoods/Hd.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>
}
<div style="display: none">
<input id="BindEntity" type="text" value="@ViewBag.BindEntity" />
<input id="Command" type="hidden" />
</div>
<div class="mtable_div">
    <form id="form1">
        <table class="mtable">
            
              <tr>
            <td  >
                <span style="color: Red">*</span>:
            </td>
            <td >
                <input id="PkId" name="PkId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                活动Id<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="ActivityId" name="ActivityId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                活动规则Id<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="RuleId" name="RuleId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                产品主键<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="ProductId" name="ProductId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                产品编码<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="ProductCode" name="ProductCode"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                商品代码<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="GoodsCode" name="GoodsCode"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                商品主键<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="GoodsId" name="GoodsId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                单价<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="Price" name="Price"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                促销价<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="PromotionPrice" name="PromotionPrice"  type="text"  />
            </td>
        </tr>
          
        </table>
    </form>
</div>
<div style="padding: 10px 10px 0 10px; text-align: center;">
    @if (Request["PkId"]==null||int.Parse(Request["PkId"]) == 0)
    {
        <a id="btnAdd" class="easyui-linkbutton" iconcls="icon-add" href="javascript:void(0)">新增</a>
    }
    else
    {
        <a id="btnEdit" class="easyui-linkbutton" iconcls="icon-ok" href="javascript:void(0)">编辑</a>
    }
    <a id="btnClose" class="easyui-linkbutton" iconcls="icon-cancel" href="javascript:void(0)">关闭</a>
</div>





