

  


@{
    ViewBag.Title = "Hd";
    Layout = "~/Views/Shared/_LayoutHandler.cshtml";
}

@section JavaScript{
    <script src="/Areas/ProductManager/Scripts/ProductCategory/Hd.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>
}
<div style="display: none">
<input id="BindEntity" type="text" value="@ViewBag.BindEntity" />
<input id="Command" type="hidden" />
</div>
<div class="mtable_div">
    <form id="form1">
        <table class="mtable">
            
              <tr>
            <td  >
                <span style="color: Red">*</span>:
            </td>
            <td >
                <input id="PkId" name="PkId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                分类名称<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="ProductCategoryName" name="ProductCategoryName"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                父级分类<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="ParentProductCategoryId" name="ParentProductCategoryId"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                分类路径<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="CategoryRoute" name="CategoryRoute"  type="text"  />
            </td>
        </tr>
            
              <tr>
            <td  >
                分类层级<span style="color: Red">*</span>:
            </td>
            <td >
                <input id="Rank" name="Rank"  type="text"  />
            </td>
        </tr>
          
        </table>
    </form>
</div>
<div style="padding: 10px 10px 0 10px; text-align: center;">
    @if (Request["PkId"]==null||int.Parse(Request["PkId"]) == 0)
    {
        <a id="btnAdd" class="easyui-linkbutton" iconcls="icon-add" href="javascript:void(0)">新增</a>
    }
    else
    {
        <a id="btnEdit" class="easyui-linkbutton" iconcls="icon-ok" href="javascript:void(0)">编辑</a>
    }
    <a id="btnClose" class="easyui-linkbutton" iconcls="icon-cancel" href="javascript:void(0)">关闭</a>
</div>





