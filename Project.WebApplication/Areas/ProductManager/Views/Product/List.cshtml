





@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

@section JavaScript{
    <script src="/Areas/ProductManager/Scripts/Product/List.js?JsParamter=@SiteConfig.GetConfig().JsParamter" type="text/javascript"></script>
    <script src="/Scripts/Control/ProductcategoryControl.js"></script>
}

<div title="产品列表" style="padding:1px;">
    <table id="datagrid" style="height:auto;" iconcls=".icon-save" singleselect="true" toolbar="#tb" fit="true"></table>
    <div id="tb" style="padding:5px;height:auto">
        <div style="margin-bottom: 5px">

            发布商品所属商品类型 <input id="SystemCategoryId2" name="SystemCategoryId2" type="text" />

            <a id="btnAdd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true">发布商品</a>

            <a id="btnDel" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true">删除</a>

            <a id="btnEdit" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true">编辑</a>

            <a id="btnDownPrd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true">下架</a>

            <a id="btnUpPrd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true">上架</a>

            <a id="btnCommandPrd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true">推荐</a>
            <a id="btnCancelCommandPrd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true">取消推荐</a>

            <a id="btnRefresh" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true">刷新</a>

        </div>

        <div id="divSearch">
            <form>

                <table class="mtable">

                    <tr>
                        <td>
                            产品名称:
                        </td>
                        <td>
                            <input id="ProductName" name="ProductName" type="text" />
                        </td>

                        <td>
                            产品编码:
                        </td>
                        <td>
                            <input id="ProductCode" name="ProductCode" type="text" />
                        </td>
                        <td>
                            商品分类:
                        </td>
                        <td>
                            <input id="ProductCategoryId" name="ProductCategoryId" type="text" />
                        </td>

                        <td>
                            商品类型:
                        </td>
                        <td>
                            <input id="SystemCategoryId" name="SystemCategoryId" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            是否推荐：
                        </td>
                        <td>
                            <select id="IsCommand" name="IsCommand">
                                <option value=""></option>
                                <option value="1">是</option>
                                <option value="2">否</option>
                            </select>

                        </td>
                        <td>是否上架</td>
                        <td>
                            <select id="IsShow" name="IsShow">
                                <option value=""></option>
                                <option value="1">是</option>
                                <option value="2">否</option>
                            </select>
                        </td>
                        <td colspan="2">
                            <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnSearch">搜索</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>





