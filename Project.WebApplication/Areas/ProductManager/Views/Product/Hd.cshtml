




@{
    ViewBag.Title = "Hd";
    Layout = "~/Views/Shared/_LayoutHandler.cshtml";
}

@section JavaScript{
    <script src="/Areas/ProductManager/Scripts/Product/Hd.js?JsParamter=@SiteConfig.GetConfig().JsParamter"></script>
}
<div style="display: ">
    <input id="BindEntity" type="text" value="@ViewBag.BindEntity" />
    <input id="Command" type="text" />

    <input id="Spec1" type="text" value="<option value='红'>红</option>" />
    <input id="Spec2" type="text" value="<option value='1'>1</option>" />
    <input id="Spec3" type="text" value="<option  value='其他'>其他</option>" />
</div>
<div class="mtable_div">
    <form id="form1">
        <table class="mtable">

            <tr>
                <td>
                    商品分类<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="ProductCategoryId" name="ProductCategoryId" type="text" />
                </td>
            </tr>
            <tr>
                <td>
                    产品名称<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="ProductName" name="ProductName" type="text" />
                </td>
            </tr>

            <tr>
                <td>
                    产品编码<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="ProductCode" name="ProductCode" type="text" />
                </td>
            </tr>

            <tr>
                <td>
                    单价<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="Price" name="Price" type="text" />
                </td>
            </tr>



            <tr>
                <td>
                    商品清单：
                </td>
                <td>
                    <div title="商品清单" style="padding:1px;height: 500px">
                        <table id="datagrid" toolbar="#tb" fit="true"></table>
                        <div id="tb" style="padding: 5px; height: auto">
                            <div style="margin-bottom: 5px">
                                <a id="btnAdd_ToolBar" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true">添加</a>
                                <a id="btnDel_ToolBar" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-remove',plain:true">删除</a>
                            </div>
                            <div id="divSearch">
                            </div>
                        </div>
                    </div>

                </td>

            </tr>


            <tr>
                <td>
                    属性1<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="Attribute1" name="Attribute1" type="text" />
                </td>
            </tr>

            <tr>
                <td>
                    属性2<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="Attribute2" name="Attribute2" type="text" />
                </td>
            </tr>

            <tr>
                <td>
                    属性3<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="Attribute3" name="Attribute3" type="text" />
                </td>
            </tr>

            <tr>
                <td>
                    图片地址1<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="PicUrl1" name="PicUrl1" type="text" />
                </td>
            </tr>

            <tr>
                <td>
                    图片地址2<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="PicUrl2" name="PicUrl2" type="text" />
                </td>
            </tr>

            <tr>
                <td>
                    图片地址3<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="PicUrl3" name="PicUrl3" type="text" />
                </td>
            </tr>



            <tr>
                <td>
                    备注<span style="color: Red">*</span>:
                </td>
                <td>
                    <input id="Remark" name="Remark" type="text" />
                </td>
            </tr>

        </table>
    </form>
</div>
<div style="padding: 10px 10px 0 10px; text-align: center;">
    @if (Request["PkId"] == null || int.Parse(Request["PkId"]) == 0)
    {
        <a id="btnAdd" class="easyui-linkbutton" iconcls="icon-add" href="javascript:void(0)">新增</a>
    }
    else
    {
        <a id="btnEdit" class="easyui-linkbutton" iconcls="icon-ok" href="javascript:void(0)">编辑</a>
    }
    <a id="btnClose" class="easyui-linkbutton" iconcls="icon-cancel" href="javascript:void(0)">关闭</a>
</div>



