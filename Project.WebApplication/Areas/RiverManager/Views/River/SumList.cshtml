


@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

@section JavaScript{
    <script src="/Areas/RiverManager/Scripts/River/List.js?JsParamter=@SiteConfig.GetConfig().JsParamter" type="text/javascript"></script>
}

<div title="一河一策" style="padding:1px;">
    <table id="datagrid" style="height:auto;" iconcls=".icon-save" singleselect="true" toolbar="#tb" fit="true"></table>
    <div id="tb" style="padding:5px;height:auto">
        <div style="margin-bottom: 5px">
            <a id="btnView" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true">查看河道基本信息</a>

            <a id="btnViewQd" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true">查看河长签到信息</a>

            <a id="btnViewHz" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true">查看河长信息</a>

            <a id="btnViewSz" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add',plain:true">查看水质水纹信息</a>

            <a id="btnRefresh" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true">刷新</a>
        </div>

        <div id="divSearch">
            <form>

                <table class="mtable">
                    <tr>
                        <td style="width: 100px">
                            河道名称:
                        </td>
                        <td style="width: 100px">
                            <input id="RiverName" name="RiverName" type="text" />
                        </td>

                        <td style="width: 100px">
                            河道等级:
                        </td>
                        <td style="width: 100px">
                            <select id="RiverRank" name="RiverRank">
                                <option value="区级">区级</option>
                                <option value="镇级">镇级</option>
                            </select>
                        </td>

                        <td style="width: 100px">
                            流经乡（镇）:
                        </td>
                        <td style="width: 100px">
                            <input id="RiverCrossArea" name="RiverCrossArea" type="text" />
                        </td>
                        <td>
                            所属部门:
                        </td>
                        <td>
                            <input id="DepartmentCode" name="DepartmentCode" type="text" style="width: 200px" />
                        </td>

                    </tr>
                    <tr>
                        <td style="width: 100px">
                            河长手机:
                        </td>
                        <td style="width: 100px">
                            <input id="UserCode" name="UserCode" type="text" />
                        </td>

                        <td style="width: 100px">
                            河长姓名:
                        </td>
                        <td style="width: 100px">
                            <input id="UserName" name="UserName" type="text" />
                        </td>


                        <td>
                            <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnSearch">搜索</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>





