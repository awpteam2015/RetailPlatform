





@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}

@section JavaScript{
    <script src="/Areas/RiverManager/Scripts/RiverProblemApply/List.js?JsParamter=@SiteConfig.GetConfig().JsParamter" type="text/javascript"></script>
}

<div title="河道问题曝光列表" style="padding:1px;">
    <table id="datagrid" style="height:auto;" iconcls=".icon-save" singleselect="true" toolbar="#tb" fit="true"></table>
    <div id="tb" style="padding:5px;height:auto">
        <div style="margin-bottom: 5px">

            <a id="btnBg" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit',plain:true">曝光</a>

            <a id="btnRefresh" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-reload',plain:true">刷新</a>
            <input type="hidden" id="Command" value="bg" />
        </div>

        <div id="divSearch">
            <form>
                <table class="mtable">
                    @Html.Partial("_Search")
                    <tr>
                        <td>
                            是否曝光 :
                        </td>
                        <td>
                            <select id="IsExposure" name="IsExposure">
                                <option value="2">请选择</option>
                                <option value="0">否</option>
                                <option value="1">是</option>
                            </select>
                        </td>

                        <td>
                            曝光等级 :
                        </td>
                        <td>
                            <select id="ExposureLever" name="ExposureLever">
                                <option value="0">请选择</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                            </select>
                        </td>

                        <td>
                            <a href="#" class="easyui-linkbutton" iconcls="icon-search" id="btnSearch">搜索</a>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>





