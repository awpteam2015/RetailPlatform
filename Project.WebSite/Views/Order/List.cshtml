
@using PagedList
@using PagedList.Mvc
@model Project.WebSite.Models.UserCenter.OrderListView

@{
    ViewBag.Title = "我的账户-我的订单";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head
{

    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="~/Scripts/Order/List.js"></script>


}
@Html.Partial("_MenuBar", "我的订单")
<div>

    <table>
        <tr>
            <td>时间</td>
            <td><input id="CreateStart" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'});" value="@Model.SearchOrderListRequest.CreateStart"/></td>
            <td><input id="CreateEnd" onclick="WdatePicker({dateFmt:'yyyy-MM-dd'});"  value="@Model.SearchOrderListRequest.CreateEnd"/></td>
            <td>订单号</td>
            <td><input id="OrderNo"  value="@Model.SearchOrderListRequest.OrderNo" /></td>
            <td><input type="button" id="btn_OrderSearch"  value="搜索" /></td>
        </tr>
    </table>

    <table>
        @foreach (var item in Model.OrderList)
        {
            <tr>
                <td>@item.OrderNo</td>
                <td>@item.OrderNo</td>
            </tr>
        }
    </table>


    @Html.PagedListPager((IPagedList)Model.PageInfo, page => Url.Action("List", new { page, type = 2 }))


</div>

